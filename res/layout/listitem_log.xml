<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/hWrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/logTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@drawable/bubble_blue"
            android:paddingLeft="10dip"
            android:text="Time"
            android:textColor="@android:color/primary_text_light" />

        <Spinner
            android:id="@+id/activityLabel"
            android:layout_width="100dp"
            android:layout_height="40dp" />
        <!-- android:text="Activity" -->
        <!-- android:layout_weight="0.21" -->
        <!-- width,height = (100,40) -->
        <!-- style="?android:attr/buttonStyleSmall" -->

        <ImageView
            android:id="@+id/invisibleBarHist"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/activityLabel"
            android:padding="2dp"
            android:src="@drawable/no_badge"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/logDeleteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/invisibleBarHist"
            android:src="@android:drawable/ic_delete" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hWrapper2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/logTimeX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@drawable/bubble_blue"
            android:paddingLeft="10dip"
            android:text="Time"
            android:textColor="@android:color/primary_text_light"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/hMood"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/logTimeX"
            android:src="@drawable/mood" />

        <TextView
            android:id="@+id/hTextMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/hMood"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:text="Joyful?"
            android:textColor="@color/text_lightgrey"
            android:textSize="10dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/hSocial"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/hTextMood"
            android:src="@drawable/social" />

        <TextView
            android:id="@+id/hSocialText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/hSocial"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:text="Social?"
            android:textColor="@color/text_lightgrey"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>