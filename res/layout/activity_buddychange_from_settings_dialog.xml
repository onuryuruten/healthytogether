<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_bc"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="vertical" >

    <!-- android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="horizontal" -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <!--             android:layout_width="40dp"
            android:layout_height="40dp" -->
         <ImageView
            android:id="@+id/status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bad_buddy_status" /> 

       <ScrollView android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
       <!--  <ImageView
            android:id="@+id/status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bad_buddy_status" />  -->
            
            
            <TextView
                android:id="@+id/alertinfo_bc"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="@string/buddy_change"
                android:textColor="@color/text_darkgrey"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/alertinfo2_bc"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_marginTop="0dp"
                android:text="@string/buddy_change"
                android:textColor="@color/text_lightgrey" >
            </TextView>
        </LinearLayout>
        </ScrollView>
    </LinearLayout><!-- android:padding="10dp" == for congrats_content -->
	
    
    <Button
        android:id="@+id/okbtn_bc"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/generalbutton"
        android:onClick="onBuddyChangeAcknowledged"
        android:text="@string/ok_button_string"
        android:textColor="@color/white"
        android:textStyle="bold" >
    </Button>

    <!--   -->
    
</LinearLayout>